{
  "name": "@comapeo/cloud-client",
  "version": "0.2.0",
  "description": "self-hosted cloud server for CoMapeo",
  "main": "src/main.js",
  "type": "module",
  "files": [
    "Dockerfile",
    "fly.toml",
    "src/**/*.js",
    "dist/**/*.d.ts"
  ],
  "exports": {
    "types": "./dist/app.d.ts",
    "import": "./src/app.js"
  },
  "scripts": {
    "dev": "nodemon --ignore 'data/' src/server.js",
    "start": "node src/server.js",
    "build:clean": "rm -rf dist",
    "build:typescript": "tsc --project ./tsconfig.build.json",
    "build": "npm-run-all --serial build:clean build:typescript",
    "format": "prettier --write .",
    "test:prettier": "prettier --check .",
    "test:eslint": "eslint .",
    "test:typescript": "tsc --project ./tsconfig.json",
    "test:node": "node --test",
    "test": "npm-run-all --aggregate-output --print-label --parallel test:*",
    "watch:test:typescript": "tsc --watch --project ./tsconfig.json",
    "watch:test:node": "npm run test:node -- --watch",
    "prepare": "husky || true",
    "prepack": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digidem/comapeo-cloud-client.git"
  },
  "author": "Awana Digital",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/digidem/comapeo-cloud-client/issues"
  },
  "homepage": "https://github.com/digidem/comapeo-cloud-client#readme",
  "devDependencies": {
    "@comapeo/schema": "^1.4.1",
    "@eslint/js": "^9.19.0",
    "@garbee/iso8601": "^1.0.3",
    "@mapeo/mock-data": "^2.1.5",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^22.13.0",
    "@types/ws": "^8.5.14",
    "eslint": "^9.19.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "iterpal": "^0.4.0",
    "lint-staged": "^15.4.3",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "random-access-memory": "^6.2.1",
    "streamx": "^2.22.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@comapeo/core": "^2.3.1",
    "@fastify/cors": "^8.5.0",
    "@fastify/sensible": "^5.6.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@fastify/websocket": "^10.0.1",
    "@mapeo/crypto": "^1.0.0-alpha.10",
    "@modelcontextprotocol/sdk": "^1.11.2",
    "@sinclair/typebox": "^0.34.15",
    "@sindresorhus/slugify": "^2.2.1",
    "@types/qrcode": "^1.5.5",
    "env-schema": "^6.0.1",
    "fastify": "^4.29.0",
    "fastify-mcp": "^2.0.0",
    "qrcode": "^1.5.4",
    "sharp": "^0.33.5",
    "string-timing-safe-equal": "^0.1.0",
    "ws": "^8.18.0",
    "zod": "^3.24.4"
  }
}
